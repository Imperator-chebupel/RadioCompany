        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:База_данных_фирмы"
        mc:Ignorable="d"
        Title="Окно Удаления" Height="250" Width="400" Icon="Images/Second.png">
    <Grid>
        <TextBox x:Name="DeleteTExtBox" HorizontalAlignment="Center" Margin="0,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" TextAlignment="Center"/>
